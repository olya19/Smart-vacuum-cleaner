doctype html
html(lang="en")
  head
    title Vacuum cleaner
    link(rel="stylesheet", href="assets/css/reset.css")
    link(rel="stylesheet", href="assets/css/main.css")
    script(src="assets/js/main.js")
  body
    div(class="content" id="content")
      div(class="cleaner", id="cleaner")
        div(class="newRoom", id="newRoom")
          form(method="POST" action="/" id="newRoomForm")
            p(id="close") x
            h2 Add room
            label Name
              input(type="text" placeholder="Kitchen" id="roomName")
            br
            label Square
            input(type="number" placeholder="20.5" min="1" id="roomSquare" step="0.1")
            input(type="button" value="Save" id="saveRoom") 
            input(type="reset" value="Reset") 
      aside(class="menu" id="menu")
        h2 Menu
        div.on-off-button-area
          div.on-off-button.cleaner-on
          span OFF
        form(method="POST" action="/change-color")
          select(id="colors")
            option(value="empty") I don't want to change it
            option(value="red") Red
            option(value="blue") Blue
            option(value="gold") Gold
            option(value="pink") Pink
            option(value="purple") Purple
            option(value="green") Green
            option(value="turquoise") Turtuoise
        div
          p To save your options #[a(href="#" id="register") register ] now
        div.rooms
          h2 Your rooms:
          p You haven't added any room yet.
          p Please press the button below to add new room
          input(type="button" id="addRoom" value="Add new room")